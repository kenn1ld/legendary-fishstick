{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "baseUrl": "src"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/typings/**/*.d.ts", "src/**/*", "src/custom.d.ts"]
}
